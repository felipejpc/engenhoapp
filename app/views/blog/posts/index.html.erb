            </div>
            <div class="entry-content">
              <div class="">
                <blockquote class="gray">
                  <!-- #TODO fix markdown content -->
                  <p><%= post.json.dig('custom_json', 'fields', 'postType', 'body') %></p>
                  <footer><%= post.json.dig('custom_json', 'fields', 'postType', 'source')%> </footer>
                </blockquote>
              </div>
              <ul class="list-inline like-comment pull-left font-12 mt-30">
                <li><i class="pe-7s-comment"></i><!-- #TODO Insert Comments Quantity -->36</li>
                <li><i class="pe-7s-like2"></i><!-- #TODO Insert Likes Quantity -->125</li>
              </ul>
            </div>
          </article>
        <% when 'singleImagePost' %>
