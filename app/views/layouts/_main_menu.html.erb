<nav id="menuzord-right" class="menuzord blue bg-lightest">
  <a class="menuzord-brand pull-left flip" href="javascript:void(0)">
    <!-- TODO To include logo into contentful model -->
    <%= image_tag 'logo-wide.png' %>
  </a>
  <% unless @contentful_layout.nil? %>
      <ul class="menuzord-menu">
        <% @contentful_layout[0].menu_items.each do |menuitem| %>
            <li><a <% if menuitem.fields.key?(:url) %>
                   href=<%= menuitem.url %>>
            <% elsif menuitem.fields.key?(:reference) %>
            href=<%= menuitem.reference.slug %>>
            <% else %>
            >
            <% end %>
                   <%= menuitem.title %></a>
              <% if menuitem.fields.key?(:level1) %>
                  <ul class="dropdown">
                    <% menuitem.level1.each do |level1| %>
                        <li><a <% if level1.fields.key?(:url) %>
                               href=<%= level1.url %>>
                        <% elsif level1.fields.key?(:reference) %>
                        href=<%= level1.reference.slug %>>
                        <% else %>
                        >
                        <% end %>
                               <%= level1.title %></a>
                          <% if level1.fields.key?(:level2) %>
                              <ul class="dropdown">
                                <% level1.level2.each do |level2| %>
                                    <li><a <% if level2.fields.key?(:url) %>
                                           href=<%= level2.url %>>
                                    <% elsif level2.fields.key?(:reference) %>
                                    href=<%= level2.reference.slug %>>
                                    <% else %>
                                    >
                                    <% end %>
                                           <%= level2.title %></a></li>
                                <% end %>
                              </ul>
                          <% end %>
                        </li>
                    <% end %>
                  </ul>
              <% end %>
            </li>
        <% end %>
      </ul>
  <% end %>
</nav>