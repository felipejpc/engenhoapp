<div class="widget">
  <h5 class="widget-title line-bottom">Posts Relacionados</h5>
  <div class="latest-posts">
    <% @related_posts.each do |post| %>
    <article class="post media-post clearfix pb-0 mb-10">
      <a class="post-thumb" href=<%= "/posts/#{post.slug}" %>><img src=<%= post.thumb_image %> alt=""></a>
      <div class="post-right">
        <h5 class="post-title mt-0"><%= link_to post.title, "/posts/#{post.slug}" %></h5>
        <p><%= "#{post.description[0, 60]}[...]" %></p>
      </div>
    </article>
    <% end %>
  </div>
</div>