<div class="widget">
  <h5 class="widget-title line-bottom">Categorias</h5>
  <div class="categories">
    <ul class="list list-border angle-double-right">
      <% @categorized_posts.each do |category| %>
      <li><a href="/posts?category=<%= category["name"] %>"><%= category["name"] %><span> (<%= category["count"] %>)</span></a></li>
      <% end %>
    </ul>
  </div>
</div>